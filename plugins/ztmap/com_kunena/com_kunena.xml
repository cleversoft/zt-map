<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<extension type="plugin" group="ztmap" version="3.0" method="upgrade">
    <name>Ztmap - Kunena Plugin</name>
    <author>Guillermo Vargas</author>
    <creationDate>September 2007</creationDate>
    <copyright>GNU GPL</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>guille@vargas.co.cr</authorEmail>
    <authorUrl>joomla.vargas.co.cr</authorUrl>
    <version>3.0.0</version>
    <description>Ztmap Plugin for Kunena component</description>
    <files>
        <filename plugin="com_kunena">com_kunena.php</filename>
        <filename>index.html</filename>
    </files>
    <languages folder="language">
        <!--
        these files will be installed in the administrator/language folder.
        -->
        <language tag="en-GB">en-GB.plg_xmap_com_kunena.ini</language>        
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="include_topics" type="list" default="1" label="ZTMAP_KUNENA_SHOW_TOPICS_LABEL" description="ZTMAP_KUNENA_SHOW_TOPICS_DESC">
                    <option value="0">ZTMAP_OPTION_NEVER</option>
                    <option value="1">ZTMAP_OPTION_ALWAYS</option>
                    <option value="2">ZTMAP_OPTION_XML_ONLY</option>
                    <option value="3">ZTMAP_OPTION_HTML_ONLY</option>
                </field>
                <field name="max_topics" type="text" default="" label="ZTMAP_KUNENA_MAX_TOPICS_LABEL" description="ZTMAP_KUNENA_MAX_TOPICS_DESC" />
                <field name="max_age" type="text" default="" label="ZTMAP_KUNENA_NEWEST_THAN_LABEL" description="ZTMAP_KUNENA_NEWEST_THAN_DESC" />
            </fieldset>
            <fieldset name="xml">
                <field name="cat_priority" type="list" default="-1" label="ZTMAP_KUNENA_CATEGORY_PRIORITY_LABEL" description="ZTMAP_KUNENA_CATEGORY_PRIORITY_DESC">
                    <option value="-1">ZTMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="cat_changefreq" type="list" default="-1" label="ZTMAP_KUNENA_CATEGORY_CHANGEFREQ_LABEL" description="ZTMAP_KUNENA_CATEGORY_CHANGEFREQ_DESC">
                    <option value="-1">ZTMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">ZTMAP_OPTION_ALWAYS</option>
                    <option value="hourly">ZTMAP_OPTION_HOURLY</option>
                    <option value="daily">ZTMAP_OPTION_DAILY</option>
                    <option value="weekly">ZTMAP_OPTION_WEEKLY</option>
                    <option value="monthly">ZTMAP_OPTION_MONTHLY</option>
                    <option value="yearly">ZTMAP_OPTION_YEARLY</option>
                    <option value="never">ZTMAP_OPTION_NEVER</option>
                </field>
                <field name="topic_priority" type="list" default="-1" label="ZTMAP_KUNENA_TOPIC_PRIORITY_LABEL" description="ZTMAP_KUNENA_TOPIC_PRIORITY_DESC">
                    <option value="-1">ZTMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="topic_changefreq" type="list" default="-1" label="ZTMAP_KUNENA_TOPIC_CHANGEFREQ_LABEL" description="ZTMAP_KUNENA_TOPIC_CHANGEFREQ_DESC">
                    <option value="-1">ZTMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">ZTMAP_OPTION_ALWAYS</option>
                    <option value="hourly">ZTMAP_OPTION_HOURLY</option>
                    <option value="daily">ZTMAP_OPTION_DAILY</option>
                    <option value="weekly">ZTMAP_OPTION_WEEKLY</option>
                    <option value="monthly">ZTMAP_OPTION_MONTHLY</option>
                    <option value="yearly">ZTMAP_OPTION_YEARLY</option>
                    <option value="never">ZTMAP_OPTION_NEVER</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
