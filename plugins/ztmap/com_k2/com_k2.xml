<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="ztmap" version="3.0" method="upgrade">
    <name>ZTMAP_PLUGIN_K2</name>
    <author></author>
    <creationDate></creationDate>
    <copyright>GNU GPL</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.3</version>
    <description>ZTMAP_PLUGIN_K2_DESC</description>
    <files>
        <filename plugin="com_k2">com_k2.php</filename>
        <filename>index.html</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_ztmap_com_k2.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_ztmap_com_k2.sys.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_ztmap_com_k2.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_ztmap_com_k2.sys.ini</language>
        <language tag="fa-IR">fa-IR/fa-IR.plg_ztmap_com_k2.ini</language>
        <language tag="fa-IR">fa-IR/fa-IR.plg_ztmap_com_k2.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="subcategories" type="list" default="no" label="ZTMAP_K2_FOLLOW_SUBCATEGORIES" description="ZTMAP_K2_FOLLOW_SUBCATEGORIES_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>
                <field name="showk2items" type="list" default="always" label="ZTMAP_K2_SHOW_ITEMS_LABEL" description="ZTMAP_K2_SHOW_ITEMS_LABEL_DESC">
                    <option value="0">ZTMAP_OPTION_NEVER</option>
                    <option value="1">ZTMAP_OPTION_ALWAYS</option>
                    <option value="2">ZTMAP_OPTION_XML_ONLY</option>
                    <option value="3">ZTMAP_OPTION_HTML_ONLY</option>
                </field>
                <field name="suppressdups" type="list" default="no" label="ZTMAP_K2_SUPRESS_DUPLICATES" description="ZTMAP_K2_SUPRESS_DUPLICATES_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>
            </fieldset>
            <fieldset name="xml">
                <field name="priority" type="list" default="0.5" label="ZTMAP_K2_PRIORITY" description="ZTMAP_K2_PRIORITY_DESC">
                    <option value="-1">ZTMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="changefreq" type="list" default="weekly" label="ZTMAP_K2_CHANGEFREQ_LABEL" description="ZTMAP_K2_CHANGEFREQ_LABEL_DESC">
                    <option value="-1">ZTMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">ZTMAP_OPTION_ALWAYS</option>
                    <option value="hourly">ZTMAP_OPTION_HOURLY</option>
                    <option value="daily">ZTMAP_OPTION_DAILY</option>
                    <option value="weekly">ZTMAP_OPTION_WEEKLY</option>
                    <option value="monthly">ZTMAP_OPTION_MONTHLY</option>
                    <option value="yearly">ZTMAP_OPTION_YEARLY</option>
                    <option value="never">ZTMAP_OPTION_NEVER</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
